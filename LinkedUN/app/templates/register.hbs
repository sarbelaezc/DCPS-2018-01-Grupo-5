<div class='register'>
  <h1>Resgístrate</h1>
  <p>Nombre completo:
    {{input type='text' value=name}}
  </p>
  <p>Correo institucional:
    {{input type='text' value=email}} @unal.edu.co
  </p>
  <p>Tipo de vinculación:
    <select onchange={{action 'cambioVinculacion' value='target.value'}}>
      <option value="administrativo">Empleado Administrativo</option>
      <option value="contratante">Empleado Contratante</option>
      <option value="estudiante">Estudiante Activo</option>
    </select>
  </p>
  <p>Dependencia:
    {{input type='text' value=dependency}}
  </p>
  <p>Contraseña:
    {{input type='password' value=password}}
  </p>
  <p>Confirmar contraseña:
    {{input type='password' value=confirmPassword}}
  </p>

  <p>
    <button class='register' type='button'  {{action 'register' name email vinculacion dependency password confirmPassword}}> Registrar </button>
  </p>
</div>
{{outlet}}
